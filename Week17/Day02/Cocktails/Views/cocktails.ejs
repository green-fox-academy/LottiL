<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Cocktails</title>
    <link rel="stylesheet" href="/assets/style.css"/>  
  </head>
  <body>
    <h1>Cocktails</h1>
    <p>
    <% alcohols.forEach(function(alcohol) { %>
      <a href="?alcohol=<%= alcohol %>" ><%= alcohol %></a>
    <% }); %>
      <a href="?">all</a>
    </p>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
      <% cocktails.forEach(function(cocktail) { %>
        <tr>
          <td>
            <span><%= cocktail.name %></span>
            <% if (!cocktail.isAlcoholic) { %>
            <span>(non-alcoholic)</span>
            <% } %>
            <br />
            <span><%= cocktail.contains.join(', ') %></span>
          </td>
          <td><%= cocktail.price %> Ft</td>
        </tr>
      <% }); %>
      </tbody>
    </table>
  </body>
</html>